<!-- The Lappa robot -->
<mujoco model="Lappa">
  <default>
    <geom friction=".5" />
  </default>
	<worldbody>
		<body name="root">
			<joint name="root_joint" type="free" pos="0 0 0" />
			<geom name="root" type="cylinder" fromto="-.075 0 0 .075 0 0" size=".005" mass=".0001" rgba=".5 .5 .5 .25" />
			<body name="connector" pos="0 0 0">
				<geom name="connector" type="cylinder" size=".012 .0775" euler="0 90 0" rgba="1 1 1 .5" mass="0.001" />
				<body name="a_connector" pos="-.0375 0 0">
					<geom name="a_connector" type="box" size=".0075 .0075 .0375" euler="0 90 0" rgba="1 1 0 1" mass="0.001" />
				</body>
				<body name="b_connector" pos=".0375 0 0">
					<geom name="b_connector" type="box" size=".0075 .0075 .0375" euler="0 90 0" rgba="1 0 1 1" mass="0.001" />
				</body>
			</body>
			<body name="a_module" pos=".155 0 0" euler="0 0 180">
				<geom name="a_house" type="cylinder" size=".0775 .005" rgba="1 0 0 1" mass="0.2" />
				<geom name="a_lock" type="box" size=".05 .05 .005" pos="0 0 .005" mass="0" />
				<joint name="a_h2" type="hinge" axis="0 1 0" pos=".0775 0 0" limited="true" range="-45 45" />
				<joint name="h3" type="hinge" pos=".155 0 0" axis="1 0 0" limited="true" range="-90 90" stiffness=".8" damping="2" />
				<site name="a_range" pos="0 -.0775 -.075" euler="90 0 0" />
				<body name="a_chamber" pos="0 0 0">
					<joint name="a_h1" type="hinge" axis="0 0 1" />
					<geom name="a_gear" type="cylinder" fromto="0 0 0 0 0 -.05" size=".044" rgba=".3 .3 .3 1" mass="0.05" />
					<geom name="a_chamber" type="cylinder" fromto="0 0 -.05 0 0 -.1" size=".065" rgba="0 0 1 1" mass="0.35" friction="2" />
					<site name="a_propeller" pos="0 0 -.05" />
          <body name="a_vacuum" pos="0 0 -.09" >
            <geom name="a_vaccum" type="box" size=".04 .04 .01" rgba=".8 .5 .5 1" margin=".01" gap=".01"  />
            <site name="a_vacuum" group="3" /> 
          </body>
				</body>
			</body>
			<body name="b_module" pos="-.155 0 0">
				<geom name="b_house" type="cylinder" size=".0775 .005" rgba="1 0 0 1" mass="0.2" />
				<geom name="b_lock" type="box" size=".05 .05 .005" pos="0 0 .005" mass="0" />
				<joint name="b_h2" type="hinge" axis="0 1 0" pos=".0775 0 0" limited="true" range="-45 45" />
				<site name="b_range" pos="0 .0775 -.075" euler="-90 0 0" />
				<body name="b_chamber" pos="0 0 0">
					<joint name="b_h1" type="hinge" axis="0 0 1" />
					<geom name="b_gear" type="cylinder" fromto="0 0 0 0 0 -.05" size=".044" rgba=".3 .3 .3 1" mass="0.05" />
					<geom name="b_chamber" type="cylinder" fromto="0 0 -.05 0 0 -.1" size=".065" rgba="0 0 1 1" mass="0.35" />
					<site name="b_propeller" pos="0 0 -.05" />
          <body name="b_vacuum" pos="0 0 -.09" >
            <geom name="b_vaccum" type="box" size=".04 .04 .01" rgba=".8 .5 .5 1" margin=".01" gap=".01"  />
            <site name="b_vacuum" group="4" />
          </body>
				</body>
			</body>
		</body>
	</worldbody>
  <sensor>
		<rangefinder name="a_range" site="a_range" />
		<rangefinder name="b_range" site="b_range" />
    <force name="a_vacuum" site="a_vacuum" />
    <force name="b_vacuum" site="b_vacuum" />
		<jointpos name="a_h1" joint="a_h1" />
		<jointpos name="b_h1" joint="b_h1" />
  </sensor>
	<actuator>
		<motor name="a_thrust" site="a_propeller" ctrllimited="true" ctrlrange="-1. 1." gear="0 0 10" />
		<motor name="b_thrust" site="b_propeller" ctrllimited="true" ctrlrange="-1. 1." gear="0 0 10" />
		<motor name="a_h1" joint="a_h1" gear="1" />
		<motor name="b_h1" joint="b_h1" gear="1" />
    <adhesion name="a_vacuum" body="a_vacuum" ctrlrange="0 1" gain="50" />
    <adhesion name="b_vacuum" body="b_vacuum" ctrlrange="0 1" gain="50" />
	</actuator>
</mujoco>
