<!-- The Lappa robot -->
<mujoco model="lappa_model">
	<worldbody>
		<body name="root">
			<freejoint />
			<body name="base">
				<geom name="arm" type="capsule" fromto="-.075 0 0 .075 0 0" size=".012" rgba="0.8 0.7 0.2 1" />
				<body name="a_module" pos="-.075 0 0">
					<site name="a_propeller" pos="-.075 0 0" />
					<joint name="a_h2" type="hinge" axis="0 1 0" limited="true" range="-45 45" stiffness=".05" />
					<geom name="a_house" type="cylinder" size=".075 .005" pos="-.075 0 0" rgba="1 0 0 1" />
					<joint name="a_h1" type="hinge" axis="0 0 1" pos="-.075 0 -.05" />
					<body name="a_chamber">
            <site name="a_vacuum" pos="-.075 0 -.1" />
            <geom name="a_gear" type="cylinder" size=".044 .05" pos="-.075 0 -.05" rgba="0 1 1 1" mass="0" />
						<geom name="a_chamber" type="box" size=".03 .03 .05" pos="-.075 0 -.05" rgba="0 0 1 1" />
					</body>
				</body>
				<body name="b_module" pos=".075 0 0">
					<site name="b_propeller" pos=".075 0 0" />
					<joint name="h3" type="hinge" axis="1 0 0" limited="true" range="-90 90" pos="-.1 0 0" stiffness=".5" damping="2" />
					<joint name="b_h2" type="hinge" axis="0 1 0" limited="true" range="-45 45" stiffness=".05" />
					<geom name="b_house" type="cylinder" size=".075 .005" pos=".075 0 0" rgba="0 0 1 1" />
					<joint name="b_h1" type="hinge" axis="0 0 1" pos=".075 0 -.05" />
					<body name="b_chamber">
            <site name="b_vacuum" pos=".075 0 -.1" />
            <geom name="b_gear" type="cylinder" size=".044 .05" pos=".075 0 -.05" rgba="0 1 1 1" mass="0" />
						<geom name="b_chamber" type="box" size=".03 .03 .05" pos=".075 0 -.05" rgba="0 0 1 1" />
					</body>
				</body>
			</body>
		</body>
	</worldbody>
	<sensor>
    <force name="a_vacuum" site="a_vacuum" />
    <force name="b_vacuum" site="b_vacuum" />
    <jointpos name="a_h1" joint="a_h1" />
    <jointpos name="b_h1" joint="b_h1" />
	</sensor>
	<actuator>
		<motor name="a_thrust" site="a_propeller" ctrllimited="true" ctrlrange="-1 1" gear="0 0 15" />
		<motor name="b_thrust" site="b_propeller" ctrllimited="true" ctrlrange="-1 1" gear="0 0 15" />
		<adhesion name="a_vacuum" body="a_chamber" ctrlrange="0 1" gain="100" />
		<adhesion name="b_vacuum" body="b_chamber" ctrlrange="0 1" gain="100" />
		<motor name="a_h1" joint="a_h1" gear="1" />
		<motor name="b_h1" joint="b_h1" gear="1" />
	</actuator>
</mujoco>
