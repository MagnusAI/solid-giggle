<!-- The Lappa robot -->
<mujoco model="Test">
	<worldbody>
		<body name="root">
			<freejoint />
			<body name="base">
				<geom name="arm" type="capsule" fromto="-.1 0 0 .1 0 0" size=".015" rgba="0.5 0.5 0.5 1" />
				<body name="a_module" pos="-.1 0 0">
					<site name="a_propeller" pos="-.05 0 0" />
					<joint name="a_h2" type="hinge" axis="0 1 0" limited="true" range="-45 45" />
					<geom name="a_module" type="cylinder" size=".05 .015" pos="-.05 0 0" rgba="1 0 0 1" />
					<joint name="a_h1" type="hinge" axis="0 0 1" pos="-.05 0 -.03" />
					<body name="a_chamber">
						<geom name="a_chamber" type="box" size=".03 .03 .03" pos="-.05 0 -.03" rgba="0 1 0 1" />
					</body>
				</body>
				<body name="b_module" pos=".1 0 0">
					<site name="b_propeller" pos=".05 0 0" />
					<joint name="h3" type="hinge" axis="1 0 0" limited="true" range="-90 90" pos="-.1 0 0" stiffness=".5" damping="2" />
					<joint name="b_h2" type="hinge" axis="0 1 0" limited="true" range="-45 45" />
					<geom name="b_module" type="cylinder" size=".05 .015" pos=".05 0 0" rgba=".8 0.45 0.6 1" />
					<joint name="b_h1" type="hinge" axis="0 0 1" pos=".05 0 -.03" />
					<body name="b_chamber">
						<geom name="b_chamber" type="box" size=".03 .03 .03" pos=".05 0 -.03" rgba="0 0 1 1" />
					</body>
				</body>
			</body>
		</body>
	</worldbody>
	<sensor>
	</sensor>
	<actuator>
		<motor name="a_thrust" site="a_propeller" ctrllimited="true" ctrlrange="-1 1" gear="0 0 10" />
		<motor name="b_thrust" site="b_propeller" ctrllimited="true" ctrlrange="-1 1" gear="0 0 10" />
		<adhesion name="a_adhesion" body="a_chamber" ctrlrange="0 1" gain="50" />
		<adhesion name="b_adhesion" body="b_chamber" ctrlrange="0 1" gain="50" />
		<motor name="a_h1" joint="a_h1" gear="1" />
		<motor name="a_h2" joint="a_h2" gear="1" />
	</actuator>
</mujoco>
