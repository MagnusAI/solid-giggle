<!-- The Lappa robot -->
<mujoco model="Lappa">
	<visual>
		<scale contactwidth="0.05" jointwidth="0.05" jointlength=".5" />
	</visual>
	<worldbody>
		<body name="a_root">
			<freejoint />
			<geom name="a_root" type="box" size=".001 .001 .001" rgba=".5 .5 .5 1" pos="0 0 -.025" mass=".001" />
			<body name="a_module">
				<site name="a_propeller" />
            <joint name="a_h2" type="hinge" axis="0 1 0" limited="true" range="-45 45" pos=".0775 0 0" />
				<body name="a_house" pos="0 0 -.003">
					<geom name="a_house" type="cylinder" size=".0775 .006" rgba=".2 .2 1 .75" />
					<joint name="a_h1" type="hinge" axis="0 0 1" limited="true" range="-180 180" />
					<body name="a_mount" pos=".0775 0 0">
						<geom name="a_mount" type="box" size=".01 .03 .005" rgba=".8 .5 .3 1" />
					</body>
				</body>
				<body name="a_chamber" pos="0 0 -.006">
					<geom name="a_gear" type="cylinder" fromto="0 0 0 0 0 -.03" size=".05" rgba=".4 .4 .4 1" />
					<geom name="a_chamber" type="cylinder" fromto="0 0 -.03 0 0 -.06" size=".06" rgba="1 0 0 1" />
					<body name="a_vacuum" pos="0 0 -.055">
						<geom name="a_vacuum" type="box" size=".04 .04 .005" rgba="1 1 1 1" margin=".01" gap=".01" mass=".001" />
					</body>
				</body>
			</body>
      <body name="arm" pos=".155 0 -.005">
        <geom name="arm" type="cylinder" size=".01 .01" euler="0 90 0" rgba=".2 .2 .2 .75" />
        <body name="a_arm" pos="-.01 0 0">
          <joint name="h3" type="hinge" axis="1 0 0" limited="true" range="-90 90" />
          <geom name="a_arm" type="box" fromto="0 0 0 -.06 0 0" size=" .01" rgba="1 .2 .2 .75" />
        </body>
        <body name="b_arm" pos=".01 0 0">
          <geom name="b_arm" type="box" fromto="0 0 0 .06 0 0" size=" .01" rgba="1 .2 .2 .75" />
        </body>
      </body>
      <body name="b_module" pos=".31 0 0" euler="0 0 180">
				<site name="b_propeller" />
        <joint name="b_h2" type="hinge" axis="0 1 0" limited="true" range="-45 45" pos=".0775 0 0" />
				<body name="b_house" pos="0 0 -.003">
					<geom name="b_house" type="cylinder" size=".0775 .006" rgba=".2 .2 1 .75" />
					<joint name="b_h1" type="hinge" axis="0 0 1" limited="true" range="-180 180" />
					<body name="b_mount" pos=".0775 0 0">
						<geom name="b_mount" type="box" size=".01 .03 .005" rgba=".8 .5 .3 1" />
					</body>
				</body>
				<body name="b_chamber" pos="0 0 -.006">
					<geom name="b_gear" type="cylinder" fromto="0 0 0 0 0 -.03" size=".05" rgba=".4 .4 .4 1" />
					<geom name="b_chamber" type="cylinder" fromto="0 0 -.03 0 0 -.06" size=".06" rgba="1 0 0 1" />
					<body name="b_vacuum" pos="0 0 -.055">
						<geom name="b_vacuum" type="box" size=".04 .04 .005" rgba="1 1 1 1" margin=".01" gap=".01" mass=".001" />
					</body>
				</body>
			</body>
		</body>
	</worldbody>
  <equality>
    <connect body1="a_mount" body2="a_arm" anchor="0 0 0" />
    <connect body1="b_mount" body2="b_arm" anchor="0 0 0" />
    <connect body1="a_arm" body2="b_arm" anchor="0 0 0" />
  </equality>
	<actuator>
		<motor name="a_h1" joint="a_h1" gear="1" />
		<adhesion name="a_adhesion" body="a_vacuum" ctrlrange="0 1" gain="50" />
		<motor name="a_thrust" site="a_propeller" ctrlrange="-1 1" ctrllimited="true" gear="0 0 15" />
    <motor name="h3" joint="h3" gear="1" />
    <motor name="b_h1" joint="b_h1" gear="1" />
		<adhesion name="b_adhesion" body="b_vacuum" ctrlrange="0 1" gain="50" />
		<motor name="b_thrust" site="b_propeller" ctrlrange="-1 1" ctrllimited="true" gear="0 0 15" />
	</actuator>

</mujoco>
